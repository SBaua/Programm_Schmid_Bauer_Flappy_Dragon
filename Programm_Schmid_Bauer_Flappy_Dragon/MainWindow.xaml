<Window x:Class="Programm_Schmid_Bauer_Flappy_Dragon.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Flappy Bird" Height="480" Width="800" KeyDown="Window_KeyDown">
    <Grid>
        <Canvas Name="GameCanvas">
            <Image Name="FlappyBirdImage" Source="/flappyBird.png.url" Width="60" Height="40"/>
            <TextBlock Name="ScoreText" FontSize="20" Foreground="White" Canvas.Left="10" Canvas.Top="10"/>
        </Canvas>
    </Grid>
</Window>
